<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="1">

  <LinearLayout
      android:id="@+id/linear_menu"
      android:paddingTop="20dp"
      android:orientation="horizontal" android:background="@color/light_menu_header"
      android:layout_width="match_parent" android:layout_height="70dp">
    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp" android:layout_gravity="center"
        android:background="@mipmap/ic_account_circle_white_24dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/login_account"
        android:layout_marginLeft="20dp" android:layout_marginBottom="10dp"
        android:textSize="18sp" android:layout_gravity="center"
        android:text="@string/please_login" android:textColor="@color/light_news_item"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
  </LinearLayout>

  <RelativeLayout
      android:background="@color/light_menu_header"
      android:layout_width="match_parent" android:layout_height="50dp">
    <ImageView
        android:id="@+id/ic_star_white" android:layout_centerVertical="true"
        android:background="@mipmap/ic_star_white_24dp" android:layout_marginLeft="20dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/myCollection"
        android:textSize="16sp" android:layout_centerInParent="true"
        android:layout_toRightOf="@id/ic_star_white" android:layout_marginLeft="20dp"
        android:text="我的收藏" android:textColor="@color/light_news_item"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/downLoadOffline" android:layout_centerVertical="true"
        android:background="@mipmap/ic_file_download_white_24dp" android:layout_gravity="center"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/downLoadOffline"
        android:layout_alignParentRight="true" android:textSize="16sp"
        android:layout_marginRight="20dp" android:layout_centerVertical="true"
        android:text="离线下载" android:textColor="@color/light_news_item"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
  </RelativeLayout>

  <LinearLayout
      android:id="@+id/linear_main"
      android:orientation="horizontal"
      android:background="#eeeeee"
      android:paddingTop="10dp" android:paddingBottom="10dp"
      android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_main"
        android:src="@drawable/main" android:layout_marginLeft="20dp"
        android:layout_width="24dp" android:layout_height="24dp"/>

    <TextView
        android:id="@+id/tv_main"
        android:text="首页" android:gravity="center"
        android:textSize="20sp" android:textColor="@color/light_toolbar"
        android:layout_width="80dp" android:layout_height="match_parent"/>
  </LinearLayout>

  <ListView
      android:id="@+id/lv_item"
      android:divider="@null"
      android:background="@android:color/white" android:scrollbars="none"
      android:layout_width="match_parent" android:layout_height="match_parent">
  </ListView>
</LinearLayout>